<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="361dp"
        android:layout_height="188dp"
        android:scaleType="center"
        android:src="@drawable/fondozaul_estrellado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="59dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="136dp"
        android:src="@drawable/estrellas_removebg_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="Hoy comienza la cuenta atrás hasta el día 25, esta activity, simula un calendario"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:layout_width="289dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        android:text="de adviento que en cada día habrá una sorpresa, no tengas impaciencia y abrelo en el día que toque, no hagas trampas."
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_felicitacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="152dp"
        android:text="@string/happy_christmas"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_marginTop="124dp"

        android:layout_marginEnd="60dp"
        android:src="@drawable/arbolnav_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>